    <div class="hint">Tap a box to read</div>

    <script>
        // --- Logic ---
        
        // 1. Get Date String
        const date = new Date();
        const dateOptions = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        const dateStr = date.toLocaleDateString('en-US', dateOptions);
        
        // 2. Define Content
        const phrases = [
            { id: 'content-1', text: "My name is" },
            { id: 'content-2', text: "I was born" },
            { id: 'content-3', text: "I am ___ years old" },
            { id: 'content-4', text: "It is " + dateStr },
            { id: 'content-5', text: "CIRA" },
            { id: 'content-6', text: "I am at" }
        ];

        // 3. Initialize UI (Split into Spans)
        phrases.forEach(item => {
            const container = document.getElementById(item.id);
            const parentBox = container.parentElement;
            
            // Split by space
            const words = item.text.split(' ');
            
            // Store span references for this box
            const spanRefs = [];

            words.forEach(word => {
                const span = document.createElement('span');
                span.className = 'word-span';
                
                // Handle the blank line specific visual
                if (word === "___") {
                    span.innerHTML = "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"; // Spaces for width
                    span.style.borderBottom = "0.6vh solid black"; // Match CSS
                } else {
                    span.textContent = word;
                }
                
                container.appendChild(span);

                // Determine spoken text for iOS/iPad
                let spokenText = word;
                if (word === "___") spokenText = "blank";
                else if (word === "I") spokenText = "Eye"; // Forces "Eye" pronunciation
                
                spanRefs.push({
                    text: spokenText,
                    el: span
                });
            });

            // Attach Click Event
            parentBox.onclick = () => playSequence(spanRefs);
        });

        // 4. Speech Logic (Word-by-Word Karaoke)
        let isSpeaking = false;

        function playSequence(wordObjects) {
            if (!window.speechSynthesis) return;

            // Stop any previous speech
            window.speechSynthesis.cancel();
            document.querySelectorAll('.speaking').forEach(el => el.classList.remove('speaking'));

            let index = 0;

            function playNext() {
                if (index >= wordObjects.length) return;

                const obj = wordObjects[index];
                
                const utterance = new SpeechSynthesisUtterance(obj.text);
                utterance.lang = 'en-US';
                utterance.rate = 0.3; // Very Slow

                // Highlight ON
                utterance.onstart = () => {
                    obj.el.classList.add('speaking');
                };

                // Highlight OFF & Next
                const finish = () => {
                    obj.el.classList.remove('speaking');
                    index++;
                    playNext();
                };

                utterance.onend = finish;
                utterance.onerror = finish;

                window.speechSynthesis.speak(utterance);
            }

            playNext();
        }

    </script>
</body>
